{
  "name": "@copilot-test/signals-router",
  "version": "1.0.0",
  "type": "module",
  "description": "A Vue Router-inspired router for React with signals support",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.mjs && tsc --emitDeclarationOnly",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "router",
    "signals",
    "spa",
    "navigation"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@preact/signals-react": ">=3.0.0",
    "react": ">=18.0.0",
    "vite": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@preact/signals-react": "^3.6.1",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "jsdom": "^25.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
